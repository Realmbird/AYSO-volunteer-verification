<!-- app/views/volunteers/index.html.erb -->
<h1>Volunteers Index</h1>

<h3>Search Form</h3>
<%= form_tag volunteers_path, method: :get do %>
  <div>
    <%= label_tag :program_name, 'Program Name:' %>
    <%= select_tag :program_name, options_from_collection_for_select(Volunteer.distinct.order(:program_name).pluck(:program_name), :to_s, :to_s, params[:program_name]), include_blank: true %>
  </div>
  
  <div>
    <%= label_tag :division_name, 'Division Name:' %>
    <%= select_tag :division_name, options_from_collection_for_select(Volunteer.distinct.order(:division_name).pluck(:division_name), :to_s, :to_s, params[:division_name]), include_blank: true %>
  </div>

  <div>
    <%= label_tag :team_name, 'Team Name:' %>
    <%= select_tag :team_name, options_from_collection_for_select(Volunteer.distinct.order(:team_name).pluck(:team_name), :to_s, :to_s, params[:team_name]), include_blank: true %>
  </div>

  <div>
    <%= label_tag :volunteer_role, 'Role:' %>
    <%= select_tag :volunteer_role, options_from_collection_for_select(Volunteer.distinct.order(:volunteer_role).pluck(:volunteer_role), :to_s, :to_s, params[:volunteer_role]), include_blank: true %>
  </div>

  <div>
    <%= label_tag :volunteer_city, 'City:' %>
    <%= select_tag :volunteer_city, options_from_collection_for_select(Volunteer.distinct.order(:volunteer_city).pluck(:volunteer_city), :to_s, :to_s, params[:volunteer_city]), include_blank: true %>
  </div>

  <div>
    <%= label_tag :volunteer_state, 'State:' %>
    <%= select_tag :volunteer_state, options_from_collection_for_select(Volunteer.distinct.order(:volunteer_state).pluck(:volunteer_state), :to_s, :to_s, params[:volunteer_state]), include_blank: true %>
  </div>

  <div>
    <%= label_tag :volunteer_postal_code, 'Postal Code:' %>
    <%= select_tag :volunteer_postal_code, options_from_collection_for_select(Volunteer.distinct.order(:volunteer_postal_code).pluck(:volunteer_postal_code), :to_s, :to_s, params[:volunteer_postal_code]), include_blank: true %>
  </div>

  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Program Name</th>
      <th>Division Name</th>
      <th>Team Name</th>
      <th>Role</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Street Address</th>
      <th>Address Unit</th>
      <th>City</th>
      <th>State</th>
      <th>Postal Code</th>
      <th>Email Address</th>
      <th>Telephone</th>
      <th>Cellphone</th>
      <th>Other Phone</th>
      <th>Association ID</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.program_name %></td>
        <td><%= volunteer.division_name %></td>
        <td><%= volunteer.team_name %></td>
        <td><%= volunteer.volunteer_role %></td>
        <td><%= volunteer.volunteer_first_name %></td>
        <td><%= volunteer.volunteer_last_name %></td>
        <td><%= volunteer.volunteer_street_address %></td>
        <td><%= volunteer.volunteer_address_unit %></td>
        <td><%= volunteer.volunteer_city %></td>
        <td><%= volunteer.volunteer_state %></td>
        <td><%= volunteer.volunteer_postal_code %></td>
        <td><%= volunteer.volunteer_email_address %></td>
        <td><%= volunteer.volunteer_telephone %></td>
        <td><%= volunteer.volunteer_cellphone %></td>
        <td><%= volunteer.volunteer_other_phone %></td>
        <td><%= volunteer.association_volunteer_id %></td>
        <td><%= link_to 'Show', volunteer_path(volunteer) %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', volunteer_path(volunteer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

